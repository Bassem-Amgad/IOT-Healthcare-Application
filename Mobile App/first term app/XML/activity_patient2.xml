<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.eng_sara.paperpatient.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="patient"
            android:textColor="@color/primary_color"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/photo_image_view"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:scaleType="centerCrop"
                android:src="@drawable/family_father" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Name: age:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATES:"
            android:textColor="@color/primary_color"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEARTRATE:"
            android:textColor="@color/primary_color"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MY HEART RATE" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="........"
            android:inputType="textPersonName"
            android:text=".............." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NORMAL"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Child:82-90" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="adult:75-82" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="old:65-75" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" ACTIVITY :rate increases by 15" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HEART ATTACK :below60 or above 90" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEMPERATURE"
            android:textColor="@color/primary_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MY BODY TEMPERATURE" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="..........."
            android:inputType="textPersonName"
            android:text="..........." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NORMAL:36.5-37.2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTIVITY : temperature increases by 0.5 degree" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMERGENCY:below 35 or above 38.5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OXGYEN"
            android:textColor="@color/primary_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OXGGYEN CONCENTRATION:" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="..........."
            android:inputType="textPersonName"
            android:text="........." />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Normal:95-100" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lack:90" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity:increases" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMERGENCY:below 80"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEDICINES:"
            android:textColor="@color/primary_color"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="..........."
            android:inputType="textPersonName"
            android:text="........." />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="..........."
            android:inputType="textPersonName"
            android:text="........." />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="........." />



    </LinearLayout>
</ScrollView>

